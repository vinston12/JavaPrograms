package Coding;

import java.nio.charset.StandardCharsets;
import java.util.Arrays;
import java.util.Random;
import java.util.Scanner;

public class EncryptionDecryption {
public static void main(String[] args) {
	Random r = new Random();
	int w = 8, k = 8;
	int tab[][] = new int[w][k];
	int dodawanie = 0;
	int dodawanieKolumn = 0;
	
	
	for (w = 0; w<tab.length;w++) {
		for (k =0; k<tab.length;k++) 
		 {

			tab[w][k] = r.nextInt(9)+1;
			dodawanie +=tab[w][k];
			System.out.print(" "+tab[w][k]+" ");
			
		}
		
		System.out.println();
		
		}
	for (w = 0; w<tab.length;w++) {
		for (k =0; k<tab.length;k++) 
		{
			dodawanieKolumn +=tab[w][k];
			
		}
		
		System.out.println("Dodawanie kolumny: " + (w+1) + " wynosi: " + dodawanieKolumn);
		dodawanieKolumn = 0;
		
		}
		System.out.println("Suma wszystkich elementów tablicy: " + dodawanie);
				
	
}
}

